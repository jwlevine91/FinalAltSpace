<%= simple_form_for(@comment) do |f| %>
  <%= f.error_notification %>

  <h2> share your space-host experience! </h2>

  <div class="form-inputs">
    <%= f.input :author %>
    <%= f.input :comment_entry %>
  </div>

  <%= f.select :rating, ["1","2","3","4","5"], {:include_blank => 'Rating'} %>
  <div class="form-actions">
  	<br>
    <%= f.button :submit, class: "btn btn-default" %>
  </div>
<% end %>
